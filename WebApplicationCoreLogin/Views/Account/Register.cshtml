@model WebApplicationCoreLogin.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">

    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>

    </div>
</div>

<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group mb-3">

                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username"> </span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password"> </span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password2" class="form-label">Password(Confirm)</label>
                <input asp-for="Password2" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password2"> </span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-user"></i> Register</button>
            </div>
        </form>
    </div>
</div>
